{
  // Allow VSCode to format file on save
  "editor.formatOnSave": true,

  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },

  // Use Prettier as default formatter for .jsx file
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  // Use Prettier as default formatter for .tsx file
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Use Prettier as default formatter for .js file
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Use Prettier as default formatter for .ts file
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
